<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vishal.ambulance_surveillance.DriverTracking" >


    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.vishal.ambulance_surveillance.DriverTracking"
        />
        
    <Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/buttonstart"
    android:text="Start Trip"
    android:textColor="@android:color/white"
    android:layout_margin="16dp"
    android:background="@android:color/holo_red_dark"
    android:layout_alignParentBottom="true"
    />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/DestinationByNear"
        android:text="Destination Nearby Hospitals"
        android:textColor="@android:color/white"
        android:layout_margin="8dp"
        android:background="@android:color/holo_red_dark"
        android:layout_alignParentBottom="true"
        />
    <Button
        android:layout_above="@+id/DestinationByNear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/DestinationByInjury"
        android:text="Destination By Injury"
        android:textColor="@android:color/white"
        android:layout_margin="8dp"
        android:background="@android:color/holo_red_dark"



        />



</RelativeLayout>
